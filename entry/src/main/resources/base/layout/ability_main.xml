<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:ability_main"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:bottom_padding="center_horizontal"
    ohos:end_padding="$float:ability_horizontal_margin"
    ohos:orientation="vertical"
    ohos:start_padding="$float:ability_vertical_margin"
    ohos:top_padding="center_horizontal">

    <Image
        ohos:id="$+id:image"
        ohos:height="match_content"
        ohos:width="match_content"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:label_indeterminate"/>

        <RadioContainer
            ohos:id="$+id:modes"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">

            <RadioButton
                ohos:id="$+id:rb_yes"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:yes"/>

            <RadioButton
                ohos:id="$+id:rb_no"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:no"/>
        </RadioContainer>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:height="match_content"
            ohos:width="65vp"
            ohos:text="$string:label_level"/>

        <Slider
            ohos:id="$+id:level_seek"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max="10000"
            ohos:progress="4000"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:height="match_content"
            ohos:width="65vp"
            ohos:text="$string:label_amplitude"/>

        <Slider
            ohos:id="$+id:amplitude_seek"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max="100"
            ohos:progress="20"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:height="match_content"
            ohos:width="65vp"
            ohos:text="$string:label_length"/>

        <Slider
            ohos:id="$+id:length_seek"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max="600"
            ohos:progress="200"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp">

        <Text
            ohos:height="match_content"
            ohos:width="65vp"
            ohos:text="$string:label_speed"/>

        <Slider
            ohos:id="$+id:speed_seek"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max="50"
            ohos:progress="5"/>
    </DirectionalLayout>

    <Image
        ohos:id="$+id:image2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:margin="8vp"/>

    <Component
        ohos:id="$+id:component"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:margin="8vp"/>
</DirectionalLayout>
